    <Grid Background="AliceBlue" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*" MaxWidth="50"></ColumnDefinition>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="682*" MinWidth="300"></ColumnDefinition>
            <ColumnDefinition Width="60*" MaxWidth="60"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" MinHeight="30" MaxHeight="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50" MinHeight="30" MaxHeight="60"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="4" Orientation="Horizontal">
            <Menu x:Name="menu"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <MenuItem Header="Файл">      
                    <MenuItem Header="Открыть" Click="OpenP_Click" ></MenuItem>
                    <MenuItem Header="Сохранить " Click="SaveP1_Click"></MenuItem>
                    <MenuItem Header="Сохранить как" Click="SaveP_Click"></MenuItem>
                    <MenuItem Header="Назад" Click="BBack_Click" ></MenuItem>       
                    <MenuItem Header="Очистить" Click="BClear_Click" ></MenuItem>
                </MenuItem>
            </Menu>
            <Button Name="BNowColor" Margin="10,0,0,0" Height="35" Width="35" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-1.134"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button Name="BBlack" Cursor="Hand" Margin="10,0,0,0" Background="Black" Height="30" Width="30" Click="BBlack_Click"></Button>
            <Button Name="BGray" Cursor="Hand" Background="Gray" Height="30" Width="30" Click="BGray_Click"></Button>
            <Button Name="BWhite" Cursor="Hand" Background="White" Height="30" Width="30" Click="BWhite_Click"></Button>
            <Button Name="BREd" Cursor="Hand"  Background="Red" Height="30" Width="30" Click="BRed_Click"></Button>
            <Button Name="BOrange" Cursor="Hand" Background="Orange" Height="30" Width="30" Click="BOrange_Click"></Button>
            <Button Name="BYellow" Cursor="Hand" Background="Yellow" Height="30" Width="30" Click="BYellow_Click"></Button>
            <Button Name="BLawnGreen" Cursor="Hand" Background="LawnGreen" Height="30" Width="30" Click="BLawnGreen_Click"></Button>
            <Button Name="BGreen" Cursor="Hand" Background="Green" Height="30" Width="30" Click="BGreen_Click"></Button>
            <Button Name="BAquamarine" Cursor="Hand" Background="Aquamarine" Height="30" Width="30" Click="BAquamarine_Click"></Button>
            <Button Name="BSkyBlue" Cursor="Hand" Background="DeepSkyBlue" Height="30" Width="30" Click="BSkyBlue_Click"></Button>
            <Button Name="BBlue" Cursor="Hand" Background="Blue" Height="30" Width="30" Click="BBlue_Click"></Button>
            <Button Name="BPurple" Cursor="Hand" Background="Purple" Height="30" Width="30" Click="BPurple_Click"></Button>
            <Button Name="BPink" Cursor="Hand" Background="HotPink" Height="30" Width="30" Click="BPink_Click"></Button>
            <Label  Name="SpaceLabel" Content="" Width="292"/>
        </StackPanel>
        <StackPanel Name="MainTools" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">

            <Label>TOOLS</Label>
            <Button Name="Pencil" Cursor="Hand" Height="40" Width="40" Click="Pencil_Click">
                <Image Source="pack://application:,,,/Properties/image/pencil.png"/>
            </Button>
            <Button Name="PenEraser" Cursor="Hand" Height="40" Width="40" Click="PenEraser_Click">
                <Image Source="pack://application:,,,/Properties/image/eraser.png" ></Image>
            </Button>
            <Button Name="Brush"  Cursor="Hand" Height="40" Width="40" Click="Brush_Click" ToolTip="МОЖНО РИСОВАТЬ КРУГИ И ОВАЛЫ">
                <Image Source="pack://application:,,,/Properties/image/brush.png"/>
            </Button>
            <TextBlock>
                    <Label>H</Label>
                    <TextBox Name="HeigthBrush" Width="20" Text="10"/>
            </TextBlock>
            <TextBlock>
                <Label>W</Label>
                    <TextBox Name="WidthBrush" Width="17" Text="3"></TextBox>
            </TextBlock>

            <Button Name="BSmall"  Cursor="Hand" Height="40" Width="40" Click="BSmall_Click">
                <Ellipse Fill="Black" Height="5" Width="5"></Ellipse>
            </Button>
            <Button Name="BMiddle" Cursor="Hand" Height="40" Width="40" Click="BMiddle_Click">
                <Ellipse Fill="Black" Height="10" Width="10"></Ellipse>
            </Button>
            <Button Name="BBig" Cursor="Hand" Height="40" Width="40" Click="BBig_Click">
                <Ellipse Fill="Black" Height="15" Width="15"></Ellipse>
            </Button>

        </StackPanel>
        <StackPanel Name="OtherTools" Grid.Row="1" Grid.Column="3">
            <Button Name="SizeOfAlbum" Cursor="Hand" Margin="0,5,0,0" Height="20" ToolTip="Установить размер листа" Content="Size" Click="SizeOfAlbum_Click"/>
            <Label>Height</Label>
            <TextBox Name="HeightAlbum" Text="550"></TextBox>
            <Label>Width</Label>
            <TextBox Name="WidthAlbum" Text="800"></TextBox>
            <Button Name="BRectangle" Cursor="Hand" Margin="0,5,0,0" Height="20" Click="BRectangle_Click">
                <Rectangle Height="12" Width="30" Stroke="Black" StrokeThickness="3"></Rectangle>
            </Button>
            <Button Name="BCircle" Cursor="Hand" Margin="0,5,0,0" Height="20" Click="BCircle_Click">
                <Ellipse Height="15" Width="15" Stroke="Black" StrokeThickness="2"></Ellipse>
            </Button>
            <Button Name="BEllipse" Cursor="Hand" Height="20" Margin="0,5,0,0" Click="BEllipse_Click">
                <Ellipse Height="10" Width="30" Stroke="Black" StrokeThickness="3"></Ellipse>
            </Button>
            <Button Name="BLine" Cursor="Hand" Margin="0,5,0,0" Height="20"  Click="BLine_Click">
                <Line X1="5" X2="35" Y1="5" Y2="9" Stroke="Black" StrokeThickness="3"></Line>
            </Button>
            <Button Name="BPolyLine" Cursor="Hand" Height="20" Margin="0,5,0,0" Click="BPolyLine_Click">
                <Polyline Stroke="Black" StrokeThickness="2" Points="5,10 15,2 35,10"></Polyline>
            </Button>
            <CheckBox x:Name="checkBox" Content="Select" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>


        </StackPanel>
        <Border BorderThickness="2" Margin="0,0,0,0" Grid.Row="1" Grid.Column="2" CornerRadius="3" >
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" >
                <InkCanvas Name="Album" Cursor="Pen" Width="auto" Height="auto" Background="White" MouseLeftButtonUp="Album_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="Album_PreviewMouseLeftButtonDown" PreviewMouseMove="Album_PreviewMouseMove" Margin="0,0,0,-11" PreviewMouseLeftButtonUp="Album_PreviewMouseLeftButtonUp">
                    <InkCanvas.CommandBindings>
                        <CommandBinding Command="Copy" Executed="CopyCommand" />
                        <CommandBinding Command="Paste" Executed="PasteCommand" />
                    </InkCanvas.CommandBindings>
                    <InkCanvas.InputBindings>
                        <KeyBinding Key="V" Modifiers="Control" Command="Paste" />
                        <KeyBinding Key="C" Modifiers="Control" Command="Copy" />
                    </InkCanvas.InputBindings>
                    <InkCanvas.DefaultDrawingAttributes>
                        <DrawingAttributes Height="2" Width="2" Color="Black"/>
                    </InkCanvas.DefaultDrawingAttributes>
                </InkCanvas>
            </ScrollViewer>
        </Border>
        <Image Name="img" HorizontalAlignment="Left" Height="110" Margin="701,470,0,0" VerticalAlignment="Top" Width="125" Style="{StaticResource ImgStyleDataTrigger}"  Grid.Row="1" Grid.Column="2" >
        </Image>
        <TextBlock Name="Coord"   TextWrapping="Wrap" Text="." Width="337" Margin="0,0,157,10"  Grid.Row="2" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="15" />
        <Label Name="NumCh" HorizontalAlignment="Right" Width="144" Margin="0,0,8,10"  Grid.Row="2" Grid.Column="2" VerticalAlignment="Bottom"/>
        <ToggleButton Content="a" Name="but" Margin="10,565,810,9"  Grid.Row="2" Grid.Column="2" IsChecked="True" Background="Yellow" Visibility="Collapsed" />


    </Grid>
</Window>